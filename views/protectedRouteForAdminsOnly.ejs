<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <%- include('partials/header.ejs'); %>
        <% if (isAdmin) { %>
            <h2> Only admins can see this </h2>

            <ul class="list-group">
                <% users.forEach(function(user){ %>
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col-md-4">
                                <%= user.username %>
                            </div>
                            <div class="col-md-4">
                                <%= user?.type %>
                            </div>
                            <div class="col-md-4">
                                <form action="/promoteToAdmin" method="POST">
                                    <input type="hidden" name="username" value="<%= user.username %>">
                                    <button type="submit" class="btn btn-primary btn-sm mb-2">Promote to admin</button>
                                </form>
                                <form action="/demoteToUser" method="POST">
                                    <input type="hidden" name="username" value="<%= user.username %>">
                                    <button type="submit" class="btn btn-secondary btn-sm">Demote to user</button>
                                </form>
                            </div>
                        </div>
                    </li>
                    <% }); %>
            </ul>
            <% } %>





                <button class="btn btn-lg btn-warning btn-sm mt-2 ml-2" type="submit" href="<%= z %>">Log out</button>


                <%- include('partials/footer.ejs'); %>


</body>

</html>